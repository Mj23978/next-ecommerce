	"version": "0.5.6",
	"author": {
		"name": "Mohammad Javad Hossieni",
		"email": "admin@fluttensor.tk",
		"url": "https://fluttensor.tk/"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/mj23978/next-ecommerce"
	},
	"private": false,
	"scripts": {
		"debug": "NODE_OPTIONS='--inspect' next dev --port 3001",
		"dev": "next dev --port 3001",
		"build": "next build",
		"analyze-build": "ANALYZE=true next build",
		"docker": "docker-compose up -d",
		"postbuild": "next-sitemap",
		"start": "next start",
		"prepare": "husky install",
    "generate": "dotenv -c -- graphql-codegen --config codegen.yml -w",
		"test:ci": "jest --ci",
		"test:coverage": "jest --selectProjects test --coverage",
		"test:watch": "jest --selectProjects test --watch ",
		"test": "jest --selectProjects test",
		"studio": "prisma studio",
		"pre-commit": "lint-staged"
	},
	"dependencies": {
		"@apollo/client": "3.5.6",
		"@headlessui/react": "1.4.2",
		"@heroicons/react": "1.0.5",
		"@hookform/resolvers": "^2.6.0",
		"@stripe/react-stripe-js": "^1.6.0",
		"@stripe/stripe-js": "^1.21.1",
    "@saleor/sdk": "^0.4.0",
    "clsx": "1.1.1",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.1.1",
    "editorjs-blocks-react-renderer": "^1.2.1",
    "graphql": "16.1.0",
    "next": "12.0.7",
    "next-seo": "^4.28.1",
    "next-sitemap": "^1.6.203",
		"next-pwa": "^5.2.24",
		"next-themes": "0.0.15",
